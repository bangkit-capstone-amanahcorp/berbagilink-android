<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50"
    android:orientation="vertical">

    <!-- Title Section -->
    <LinearLayout
        android:id="@+id/titleToko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/toko"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Icon Panah"
            android:src="@drawable/baseline_keyboard_arrow_down_24" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        tools:context=".view.settings.halaman.TokoFragment">

        <LinearLayout
            android:id="@+id/containerTokoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/biru_toska_muda"
                app:cardCornerRadius="12dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            style="@style/TextFieldTitle"
                            android:text="@string/status_toko_aktif" />

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/TextDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aktifkan_atau_non_aktifkan_toko"
                            android:textColor="@color/biru_toska_muda_text" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextFieldTitle"

                android:text="@string/foto_profil_toko" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/tambahkan_foto_profil"
                    android:textColor="@color/biru_toska"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Nama Toko -->
            <TextView
                style="@style/TextFieldTitle"
                android:text="@string/nama_toko" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldNamaToko"
                style="@style/CustomTextInputLayout"
                android:hint="@string/masukkan_nama_toko">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bio -->
            <TextView
                style="@style/TextFieldTitle"

                android:text="@string/bio" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldBio"
                style="@style/CustomTextInputLayout"
                android:hint="@string/lorem_ipsum">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Lokasi Toko -->
            <TextView
                style="@style/TextFieldTitle"

                android:text="@string/lokasi_toko" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextDropdownTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/provinsi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/required"
                    android:textColor="@color/red" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldProvinsi"
                style="@style/DropdownTextInputLayout"
                android:hint="@string/pilih_provinsi">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    app:simpleItems="@array/list_provinsi" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextDropdownTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/kabupaten" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/required"
                    android:textColor="@color/red" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldKabupaten"
                style="@style/DropdownTextInputLayout"
                android:hint="@string/pilih_kabupaten">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    app:simpleItems="@array/list_kecamatan" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextDropdownTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/kecamatan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/required"
                    android:textColor="@color/red" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldKecamatan"
                style="@style/DropdownTextInputLayout"
                android:hint="@string/pilih_kecamatan">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    app:simpleItems="@array/list_kecamatan" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextFieldTitle"

                android:text="@string/alamat_detail_toko" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldAlamatDetailToko"
                style="@style/CustomTextInputLayout"
                android:hint="@string/lorem_ipsum">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextFieldTitle"

                android:text="@string/deskripsi_footer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldDekripsiFooter"
                style="@style/CustomTextInputLayout"
                android:hint="@string/lorem_ipsum">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>