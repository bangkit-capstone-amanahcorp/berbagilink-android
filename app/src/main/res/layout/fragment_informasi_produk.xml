<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleInformasiProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/informasi_produk"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Icon Panah"
            android:src="@drawable/baseline_keyboard_arrow_down_24" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        tools:context=".view.settings.halaman.TokoFragment">

        <LinearLayout
            android:id="@+id/containerInformasiProdukContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <!-- Jenis Pengecekan Pembayaran -->
                    <TextView
                        style="@style/TextFieldTitle"
                        android:text="@string/nama_produk" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomTextInputLayout"
                        android:hint="@string/placeholder_nama_produk">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="@color/white_500"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            style="@style/InfoCard"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_info"
                                app:tint="@color/neutral_200" />

                            <TextView
                                style="@style/TextDescription"
                                android:layout_marginStart="6dp"
                                android:text="@string/info_nama_produk"
                                android:textColor="@color/neutral_300" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextFieldTitle"
                            android:text="@string/jenis" />

                        <TextView
                            style="@style/TextFieldTitle"
                            android:layout_marginStart="4dp"
                            android:text="@string/required"
                            android:textColor="@color/red" />
                    </LinearLayout>


                    <!-- Radio Group for Payment Check Type -->
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/enabled_selected">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="true"
                            android:text="@string/barang_fisik" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:enabled="true"
                            android:text="@string/jasa" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:enabled="true"
                            android:text="@string/produk_digital" />
                    </RadioGroup>

                    <!-- Payment Method -->
                    <TextView
                        style="@style/TextFieldTitle"
                        android:text="@string/kategori" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/DropdownTextInputLayout"
                        android:hint="@string/placeholder_pilih_kategori">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        style="@style/InfoCard"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/neutral_200" />

                        <TextView
                            style="@style/TextDescription"
                            android:layout_marginStart="6dp"
                            android:text="@string/info_kategori"
                            android:textColor="@color/neutral_300"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <!-- Account Owner Name Input -->
                    <TextView
                        style="@style/TextFieldTitle"
                        android:text="@string/kode_produk" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomTextInputLayout"
                        android:hint="@string/placeholder_kode_produk">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        style="@style/InfoCard"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/neutral_200" />

                        <TextView
                            style="@style/TextDescription"
                            android:layout_marginStart="6dp"
                            android:text="@string/info_kode_produk"
                            android:textColor="@color/neutral_300" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>