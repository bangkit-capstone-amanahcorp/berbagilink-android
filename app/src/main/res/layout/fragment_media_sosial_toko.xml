<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_50">

    <!-- Title Section -->
    <LinearLayout
        android:id="@+id/titleMediaSosial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/baseline_rectangle_white"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Media Sosial Toko"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:contentDescription="Icon Panah"/>
    </LinearLayout>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/containerMediaSosial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            style="@style/TextDescription"
            android:textColor="@color/neutral_300"
            android:text="@string/deskripsi_media_sosial_toko"/>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/whatsapp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldWhatsapp"
            android:layout_width="match_parent"
            style="@style/CustomTextInputLayout"
            android:layout_height="wrap_content"
            android:hint="@string/number_example">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="16dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_500">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/neutral_200"
                    android:src="@drawable/ic_info"/>

                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/neutral_300"
                    style="@style/TextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer_phone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/isi_chat_otomatis_whatsapp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldChatWhatsapp"
            style="@style/CustomTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_chat_otomatis_whatsapp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/TextFieldTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username_instagram" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldNamaInstagram"
            android:layout_width="match_parent"
            style="@style/CustomTextInputLayout"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_username_instagram">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/link_facebook" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLinkFacebook"
            style="@style/CustomTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_link_facebook">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/link_youtube" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/CustomTextInputLayout"
            android:id="@+id/textFieldLinkYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_link_youtube">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/link_tiktok" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLinkTiktok"
            android:layout_width="match_parent"
            style="@style/CustomTextInputLayout"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_link_tiktok">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/link_tokopedia" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLinkTokopedia"
            android:layout_width="match_parent"
            style="@style/CustomTextInputLayout"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_link_tokopedia">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/TextFieldTitle"
            android:layout_height="wrap_content"
            android:text="@string/link_shoope" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLinkShoope"
            android:layout_width="match_parent"
            style="@style/CustomTextInputLayout"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_link_shoope">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>