<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <com.google.android.material.appbar.AppBarLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/sekunder">-->

<!--            <com.google.android.material.appbar.MaterialToolbar-->
<!--                android:id="@+id/topAppBarBanner"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:navigationIcon="@drawable/ic_menu"-->
<!--                android:title="Settings">-->

<!--                <ImageView-->
<!--                    android:id="@+id/sidebar_menu"-->
<!--                    android:layout_width="98.33dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:layout_gravity="start"-->
<!--                    android:src="@drawable/logo"-->
<!--                    android:layout_weight="1"/>-->


<!--            </com.google.android.material.appbar.MaterialToolbar>-->
<!--        </com.google.android.material.appbar.AppBarLayout>-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primer"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/backTambahBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_back"
                        android:background="@color/primer"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvTokoOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tambah_banner"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/upload_banner"
                            android:textColor="#333333"
                            android:textStyle="bold"/>

                        <FrameLayout
                            android:id="@+id/flUploadBanner"
                            android:layout_width="match_parent"
                            android:layout_height="152dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/border_input_banner"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/ic_upload" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Upload Banner\n(ukuran 2:1, max size 1 MB)"
                                    android:textAlignment="center"
                                    android:textSize="11sp" />

                            </LinearLayout>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/judul_banner"
                            android:textColor="#333333"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/etInputJudulBanner"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginBottom="12dp"
                            android:paddingStart="12dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/border_input_banner"
                            android:hint="Masukkan judul artikel saat banner diklik"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/isi_banner"
                            android:textColor="#333333"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/border_rte"
                                android:padding="10dp"
                                app:flexWrap="wrap"
                                app:justifyContent="flex_start">

                                <TextView
                                    android:id="@+id/tvFormatBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_rteformat"
                                    android:drawablePadding="4dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvFontSizeBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="13  ▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvBoldBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_rtebold"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvItalicBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_rteitalic"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvUnderlineBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:drawableStart="@drawable/ic_rteunderline"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvEraseBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:layout_gravity="center"
                                    android:gravity="center"                                    android:drawableStart="@drawable/ic_rteerase"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvFontBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="Open Sans  ▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvColorBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"                                    android:drawableStart="@drawable/ic_rtecolor"
                                    android:drawablePadding="4dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/btn_rte"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp">

                                    <TextView
                                        android:id="@+id/tvBulletsBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="31dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"                                        android:drawableStart="@drawable/ic_rtebullets"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp" />

                                    <TextView
                                        android:id="@+id/tvNumberingBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="31dp"
                                        android:background="@drawable/btn_rtenumbering"
                                        android:layout_gravity="center"
                                        android:gravity="center"                                        android:drawableStart="@drawable/ic_rtenumbering"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp" />

                                    <TextView
                                        android:id="@+id/tvAlignBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="31dp"
                                        android:drawableStart="@drawable/ic_rtealign"
                                        android:text="▾"
                                        android:textSize="11sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:drawablePadding="4dp"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp" />



                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvSpacingBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"                                    android:drawableStart="@drawable/ic_rtespacing"
                                    android:drawablePadding="4dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvRuleBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:layout_gravity="center"
                                    android:gravity="center"                                    android:drawableStart="@drawable/ic_rterule"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>

                                <TextView
                                    android:id="@+id/tvTableBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="31dp"
                                    android:background="@drawable/btn_rte"
                                    android:text="▾"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"                                    android:drawableStart="@drawable/ic_rtetable"
                                    android:drawablePadding="4dp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginBottom="3dp"/>
                            </com.google.android.flexbox.FlexboxLayout>

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="134dp"
                                android:background="@drawable/border_isi_artikel"
                                android:scrollbars="vertical">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="134dp"
                                    android:minHeight="134dp"
                                    android:hint="Masukkan isi artikel"
                                    android:gravity="top|start"
                                    android:padding="8dp"
                                    android:scrollbars="vertical"
                                    android:background="@android:color/transparent"
                                    android:textSize="10sp"
                                    />
                            </ScrollView>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/abu_terang" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnCancel"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="@string/batal"
                                android:textAllCaps="false"
                                android:textColor="@color/biru_toska"
                                android:textStyle="bold"
                                app:strokeColor="@color/biru_toska" />

                            <Button
                                android:id="@+id/btnSave"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/biru_toska"
                                android:text="@string/simpan"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/sidebar_menu" />
</androidx.drawerlayout.widget.DrawerLayout>