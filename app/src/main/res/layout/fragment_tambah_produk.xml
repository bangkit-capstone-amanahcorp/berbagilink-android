<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.produk.daftarProduk.TambahProdukFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Container untuk TokoFragment -->
        <FrameLayout
            android:id="@+id/containerInformasiProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />

        <!-- Container untuk MediaSosialFragment -->
        <FrameLayout
            android:id="@+id/containerDetailProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />

        <!-- Container untuk TransaksiFragment -->
        <FrameLayout
            android:id="@+id/containerVarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" /><!-- Container untuk TransaksiFragment -->
        <FrameLayout
            android:id="@+id/containerHargaStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" /><!-- Container untuk TransaksiFragment -->
        <FrameLayout
            android:id="@+id/containerDiskonGrosir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" /><!-- Container untuk TransaksiFragment -->
        <FrameLayout
            android:id="@+id/containerBerat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" /><!-- Container untuk TransaksiFragment -->
        <FrameLayout
            android:id="@+id/containerRekeningTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

</FrameLayout>