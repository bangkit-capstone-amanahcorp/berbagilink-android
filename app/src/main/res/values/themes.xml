<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PtAmanah" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="HomePage" parent="Base.Theme.PtAmanah">
        <item name="colorPrimary">@color/biru_toska</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="StatusBarWhite" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/biru_toska</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="StatusBarWhiteAC" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/biru_toska</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="StatusBarCremAC" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/biru_toska</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:statusBarColor">#FBF5FC</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TopRoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedCornerAll">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>